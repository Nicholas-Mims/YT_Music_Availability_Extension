{
    "manifest_version": 3,
    "name": "YouTube Music Availability Detector",
    "version": "0.1",
    "description": "A simple plugin to detect whether a YouTube video is available on YouTube Music.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": [
        "activeTab", "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "persistent": false
    }
}